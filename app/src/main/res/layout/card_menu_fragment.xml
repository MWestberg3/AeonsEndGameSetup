<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CardMenuFragment">


    <Button
        android:id="@+id/gemButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gem_card"
        app:layout_constraintBottom_toTopOf="@+id/relicButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/relicButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/relic_card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/spellButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/spell_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relicButton" />


</androidx.constraintlayout.widget.ConstraintLayout>